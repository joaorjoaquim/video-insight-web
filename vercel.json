{
  "buildCommand": "npm run build",
  "installCommand": "npm ci --prefer-offline --no-audit",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NPM_FLAGS": "--legacy-peer-deps"
    }
  },
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 30
    }
  }
} 